<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.kordelle.flachwitze.flachwitze.Handy">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alle Witze"
        android:id="@+id/awb"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ewb"
        android:layout_alignEnd="@+id/ewb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Termine"
        android:id="@+id/tb"
        android:layout_below="@+id/awb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/mrb"
        android:layout_alignEnd="@+id/mrb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mehr"
        android:id="@+id/mrb"
        android:layout_below="@+id/tb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/hsweb"
        android:layout_alignEnd="@+id/hsweb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entwickler"
        android:id="@+id/ewb"
        android:layout_below="@+id/awb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tb"
        android:layout_alignEnd="@+id/tb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hier sind wir erreichbar"
        android:id="@+id/hsweb"
        android:layout_below="@+id/mrb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ãœber"
            android:id="@+id/ueb"
            android:layout_below="@+id/hsweb"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/hsweb"
            android:layout_alignEnd="@+id/hsweb" />

    </RelativeLayout>
</ScrollView>